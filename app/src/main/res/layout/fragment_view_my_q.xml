<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.service.ViewMyQFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragment.service.ViewMyQFragment">


        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/viewMyQToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/viewMyQTextViewQType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/notosans_semibold"
                    android:includeFontPadding="false"
                    android:text="아파트톡의 중심은 항상 고객님입니다."
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/viewMyQTextViewQTypeInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:text="이용하며 느끼는 불편한 점이나 바라는 점을 알려주세요 \n소중한 의견으로 한 걸음 더 다가가는 아파트톡이 되겠습니다"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/viewMyQTextViewQTypeInfoTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/notosans_semibold"
                    android:includeFontPadding="false"
                    android:text="문의량이 많은 경우 답변은 24시간 이상 소요될 수 있습니다"
                    android:textStyle="bold"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/viewMyQTextViewTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"
                    android:text="내용"
                    android:fontFamily="@font/notosans_semibold"
                    android:includeFontPadding="false"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconMode="clear_text"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/viewMyQContent"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:gravity="top"
                        android:text="질문한 내용입니다."
                        android:fontFamily="@font/notosans_medium"
                        android:includeFontPadding="false"
                        android:inputType="text|textMultiLine"
                        android:textSize="14dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/viewMyQTextViewAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/notosans_semibold"
                    android:includeFontPadding="false"
                    android:text="답변"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconMode="clear_text"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/viewMyQTextViewAnsContent"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:gravity="top"
                        android:fontFamily="@font/notosans_medium"
                        android:includeFontPadding="false"
                        android:text="답변한 내용입니다."
                        android:inputType="text|textMultiLine"
                        android:textSize="14dp" />
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

        </ScrollView>


    </LinearLayout>
</LinearLayout>