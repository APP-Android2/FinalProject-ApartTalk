<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_stroke"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.community.fragment.CommunityBottomSheetFragment">

    <View
        android:id="@+id/divider5"
        android:layout_width="50dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:background="@color/lightGray" />

    <View
        android:id="@+id/divider9"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/lightGray" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonCommunityDetailModify"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="406dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/notosans_semibold"
        android:includeFontPadding="false"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="수정하기"
        android:textColor="@color/third"
        android:textSize="18sp"
        app:cornerRadius="0dp"
        app:rippleColor="@color/third"/>

    <View
        android:id="@+id/divider10"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"

        android:background="@color/lightGray" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonCommunityDetailDelete"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="406dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/notosans_semibold"
        android:includeFontPadding="false"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="삭제하기"
        android:textColor="@color/sixth"
        android:textSize="18sp"
        app:cornerRadius="0dp"
        app:rippleColor="@color/third"/>

    <View
        android:id="@+id/divider11"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/lightGray" />

</LinearLayout>