<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/homeAptInformationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_sheet">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/homeAptNameAndAlarm"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="마재마을 송촌파인힐 104동 806호"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:fontFamily="@font/notosans_bold"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/icon_alarm"
                        android:clickable="true"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/home_round"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    app:layout_constraintTop_toBottomOf="@id/homeAptNameAndAlarm"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="위치"
                            android:fontFamily="@font/notosans_semibold"
                            android:includeFontPadding="false"
                            android:textColor="@color/white"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="서울 송파구 장지동"
                            android:fontFamily="@font/notosans_semibold"
                            android:includeFontPadding="false"
                            android:textColor="@color/white"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="총 세대 수"
                            android:fontFamily="@font/notosans_semibold"
                            android:includeFontPadding="false"
                            android:textColor="@color/white"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1500세대"
                            android:fontFamily="@font/notosans_semibold"
                            android:includeFontPadding="false"
                            android:textColor="@color/white"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="주차 대수"
                            android:fontFamily="@font/notosans_semibold"
                            android:includeFontPadding="false"
                            android:textColor="@color/white"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3580대"
                            android:fontFamily="@font/notosans_semibold"
                            android:includeFontPadding="false"
                            android:textColor="@color/white"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="단지 규모"
                            android:fontFamily="@font/notosans_semibold"
                            android:includeFontPadding="false"
                            android:textColor="@color/white"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12 ~ 21층 / 22동 / 51 ~ 84m"
                            android:fontFamily="@font/notosans_semibold"
                            android:includeFontPadding="false"
                            android:textColor="@color/white"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="입주일"
                            android:fontFamily="@font/notosans_semibold"
                            android:includeFontPadding="false"
                            android:textColor="@color/white"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2018년 12월 25일"
                            android:fontFamily="@font/notosans_semibold"
                            android:includeFontPadding="false"
                            android:textColor="@color/white"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/homeAptScheduleLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:id="@+id/homeAptScheduleTitleLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_calendar"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="아파트 일정"
                        android:textColor="@color/black"
                        android:fontFamily="@font/notosans_semibold"
                        android:includeFontPadding="false"
                        android:textSize="18dp"/>

                </LinearLayout>

                <CalendarView
                    android:id="@+id/homeCalendarView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/homeAptScheduleTitleLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/homeCalendarView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            
                            <ImageView
                                android:id="@+id/homeAptScheduleImage1"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:src="@drawable/icon_donut1"
                                app:layout_constraintTop_toTopOf="@id/homeAptScheduleText1"
                                app:layout_constraintBottom_toBottomOf="@id/homeAptScheduleText1"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintDimensionRatio="1:1"/>
                            
                            <TextView
                                android:id="@+id/homeAptScheduleText1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="가스 점검"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/notosans_semibold"
                                android:includeFontPadding="false"
                                android:layout_marginLeft="10dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/homeAptScheduleImage1"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:id="@+id/homeAptScheduleImage3"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:src="@drawable/icon_donut3"
                                app:layout_constraintTop_toTopOf="@id/homeAptScheduleText3"
                                app:layout_constraintBottom_toBottomOf="@id/homeAptScheduleText3"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintDimensionRatio="1:1"/>

                            <TextView
                                android:id="@+id/homeAptScheduleText3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="엘리베이터 점검"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/notosans_semibold"
                                android:includeFontPadding="false"
                                android:layout_marginLeft="10dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/homeAptScheduleImage3"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:id="@+id/homeAptScheduleImage5"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:src="@drawable/icon_donut5"
                                app:layout_constraintTop_toTopOf="@id/homeAptScheduleText5"
                                app:layout_constraintBottom_toBottomOf="@id/homeAptScheduleText5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintDimensionRatio="1:1"/>

                            <TextView
                                android:id="@+id/homeAptScheduleText5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="쓰레기 수거"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/notosans_semibold"
                                android:includeFontPadding="false"
                                android:layout_marginLeft="10dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/homeAptScheduleImage5"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/homeAptScheduleImage2"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:src="@drawable/icon_donut2"
                                app:layout_constraintTop_toTopOf="@id/homeAptScheduleText2"
                                app:layout_constraintBottom_toBottomOf="@id/homeAptScheduleText2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintDimensionRatio="1:1"/>

                            <TextView
                                android:id="@+id/homeAptScheduleText2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="소독"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/notosans_semibold"
                                android:includeFontPadding="false"
                                android:layout_marginLeft="10dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/homeAptScheduleImage2"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:id="@+id/homeAptScheduleImage4"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:src="@drawable/icon_donut4"
                                app:layout_constraintTop_toTopOf="@id/homeAptScheduleText4"
                                app:layout_constraintBottom_toBottomOf="@id/homeAptScheduleText4"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintDimensionRatio="1:1"/>

                            <TextView
                                android:id="@+id/homeAptScheduleText4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="알뜰장"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/notosans_semibold"
                                android:includeFontPadding="false"
                                android:layout_marginLeft="10dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/homeAptScheduleImage4"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:id="@+id/homeAptScheduleImage6"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:src="@drawable/icon_donut6"
                                app:layout_constraintTop_toTopOf="@id/homeAptScheduleText6"
                                app:layout_constraintBottom_toBottomOf="@id/homeAptScheduleText6"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintDimensionRatio="1:1"/>

                            <TextView
                                android:id="@+id/homeAptScheduleText6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="관리비 공개"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/notosans_semibold"
                                android:includeFontPadding="false"
                                android:layout_marginLeft="10dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/homeAptScheduleImage6"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>