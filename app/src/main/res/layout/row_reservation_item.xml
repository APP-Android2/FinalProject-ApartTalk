<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:id="@+id/reservationLayout"
    android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/reservationTextViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024.05.19"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewReservationLabelEtc"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:background="@drawable/dropdown_box_border"
                android:fontFamily="@font/notosans_semibold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="text"
                android:textColor="@color/third"
                android:textSize="12sp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/reservationImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/reservationTextViewDate"
                card_view:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/reservationTextViewFacility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/notosans_bold"
                android:includeFontPadding="false"
                android:text="수영장"
                android:textSize="14sp"
                card_view:layout_constraintStart_toEndOf="@+id/reservationImageView"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/reservationTextViewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:text="15:00 ~ 17:00"
                android:textSize="12sp"
                card_view:layout_constraintStart_toEndOf="@+id/reservationImageView"
                card_view:layout_constraintTop_toBottomOf="@+id/reservationTextViewFacility" />

            <TextView
                android:id="@+id/reservationTextViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:text="20,000 2인"
                android:textSize="12sp"
                card_view:layout_constraintStart_toEndOf="@+id/reservationImageView"
                card_view:layout_constraintTop_toBottomOf="@+id/reservationTextViewTime" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>