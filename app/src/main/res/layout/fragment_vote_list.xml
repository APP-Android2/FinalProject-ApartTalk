<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.vote.VoteListFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/voteListToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/voteListTapLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:tabTextAppearance="@style/MySelectedTabTextAppearance"
            app:tabTextColor="@color/lightGray"
            app:tabIndicatorColor="@color/third"
            app:tabIndicatorHeight="2dp"
            app:tabIndicatorGravity="bottom"
            app:tabRippleColor="@color/fourth"
            app:tabIndicatorFullWidth="true">

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="주민투표" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="설문조사" />
        </com.google.android.material.tabs.TabLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 진행 중인 투표 Section -->
                <TextView
                    android:id="@+id/voteListTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/notosans_semibold"
                    android:includeFontPadding="false"
                    android:text="진행 중인 투표"
                    android:textSize="18sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/voteListCardTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/notosans_semibold"
                            android:includeFontPadding="false"
                            android:text="동 대표 선거"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/voteListCardTextView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="@font/notosans_regular"
                            android:includeFontPadding="false"
                            android:text="2024년 05/01일 부터 05/15일까지 동 대표 선거가 진행되고 있습니다. 많은 참여 부탁드립니다." />

                        <Button
                            android:id="@+id/voteListButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/second"
                            android:fontFamily="@font/notosans_semibold"
                            android:includeFontPadding="false"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:text="투표 하기" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- 지난 투표 내역 Section -->
                <TextView
                    android:id="@+id/voteListTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/notosans_semibold"
                    android:includeFontPadding="false"
                    android:text="지난 투표 내역"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/lightGray" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/voteListRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
